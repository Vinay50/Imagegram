<div class ="col-md-12">
       <div class ="col-md-4 col-md-offset-4 sign-in-up">
           <h3 class="text-center">Edit  Your Profile</h3>
              <%= form_for @user, url: {action: "update"}, html: { multipart: true } do |f| %>
                   <div class="form-group">
                        <%= f.text_field :username, :class => 'form-control' %>
                   </div>
                  <div class="form-group">
                        <%= f.file_field :avatar, :class => 'form-control' %>
                   </div>
                   <div class="form-group">
                        <%= f.text_area :bio, :class => 'form-control' %>
                   </div>
                     <div class="form-group">
                        <%= f.text_field :dob,  :class => 'form-control' %>
                   </div>
                   <div class="form-group">
                        <%= f.text_field :phone_number, :class => 'form-control' %>
                   </div>
                   <div class="form-group">
                        <%= f.text_field :gender, :class => 'form-control' %>
                   </div>
                   <div class="form-group">
                        <%= f.text_field :location, :class => 'form-control' %>
                   </div>
                  <div class="form-actions">
                    <%= f.submit  "Update", :class => "btn btn-success form-control" %>
                  </div>
            <% end %>

           <%= link_to "Back", :back %>
      </div>
</div>
<script type="text/javascript">
	$('.datepicker').datepicker({
    format: 'mm/dd/yyyy',
    startDate: '-3d'
});
</script>>