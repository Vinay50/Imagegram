<div class ="col-md-12">
	<div class ="col-md-4 col-md-offset-4 sign-in-up">
	       <h3 class="text-center">Forgot your password?</h3>
		<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		  <%= f.error_notification %>

		  <div class="form-group">
		    <%= f.input :email, required: true, autofocus: true , input_html: { class: 'form-control'}  %>
		  </div>

		  <div class="form-actions">
		    <%= f.button :submit, "Send me reset password instructions",  :class => 'btn btn-success form-control'   %>
		  </div>
		<% end %>
		<%= render "devise/shared/links" %>
	</div>
</div>	
			

