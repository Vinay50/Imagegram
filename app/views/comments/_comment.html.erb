<div id="comment">
      <div class="user-name comment">
      <%=  link_to "#{comment.user.username}", edit_user_registration_path%>
      <%= comment.content %>
  <% if comment.user == current_user %>
      <%= link_to post_comment_path(post, comment), method: :delete, data: { confirm: "Are you sure?" }, remote:true do %>
            <span class="glyphicon glyphicon-remove delete-comment pull-right"></span>
       <% end %>
  <% end %>
</div>
  